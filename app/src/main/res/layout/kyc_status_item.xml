<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/rl_main"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:id="@+id/rl_status"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/black"
            android:id="@+id/rl_title"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/request"
                android:textColor="@color/white"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginRight="5dip"
                android:padding="@dimen/_10dp"
                android:layout_toLeftOf="@+id/tv_status"
                android:id="@+id/tv_request_id"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approve"
                android:textColor="@color/Lime"
                android:padding="@dimen/_10dp"
                android:id="@+id/tv_status"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/mywhite"
            android:layout_below="@+id/rl_title"
            android:id="@+id/rl_field_name"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Field Name"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
            <TextView
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:text="@string/fieldname"
                android:id="@+id/tv_field_name"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
        </RelativeLayout>

        <TableRow
            android:id="@+id/hr1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_field_name"
            android:background="@color/Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/mywhite"
            android:layout_below="@+id/hr1"
            android:id="@+id/rl_old_value"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Old Value"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>

            <TextView
                android:id="@+id/tv_old_value"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-2dp"
                android:lines="1"
                android:padding="@dimen/_10dp"
                android:text="@string/olddate"
                android:textColor="@color/black"
                android:textSize="@dimen/_16dp" />
        </RelativeLayout>
        <TableRow
            android:id="@+id/hr2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_old_value"
            android:background="@color/Gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/mywhite"
            android:layout_below="@+id/hr2"
            android:id="@+id/rl_new_value"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Value"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
            <TextView
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:text="@string/newdate"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:lines="1"
                android:id="@+id/tv_new_value"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
        </RelativeLayout>
        <TableRow
            android:id="@+id/hr3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_new_value"
            android:background="@color/Gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/mywhite"
            android:layout_below="@+id/hr3"
            android:id="@+id/rl_date"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10dp"
                android:lines="1"
                android:text="@string/date1"
                android:textColor="@color/black"
                android:textSize="@dimen/_16dp" />
        </RelativeLayout>
        <TableRow
            android:id="@+id/hr4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_date"
            android:background="@color/Gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/mywhite"
            android:layout_below="@+id/hr4"
            android:id="@+id/rl_admin"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Comment"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
            <TextView
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="@color/black"
                android:padding="@dimen/_10dp"
                android:lines="1"
                android:id="@+id/tv_admin_coment"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/_16dp"/>
        </RelativeLayout>
        <TableRow
            android:id="@+id/hr5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/rl_admin"
            android:background="@color/Gray" />

    </RelativeLayout>

</RelativeLayout>