<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.WantRequirment">
    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/black">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_30dp"
                android:background="@color/black"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_white_back_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/transactions"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_toRightOf="@id/rl_back"
            android:layout_centerVertical="true"
            android:text="What you want Requirement"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_actionbar">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                >

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Quantity*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:hint="Enter Quantity"
                    android:layout_toRightOf="@+id/tv_qty"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_below="@+id/rl_qty"
                >

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Unit*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <EditText
                    android:id="@+id/et_unit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:hint="Enter Unit"
                    android:layout_toRightOf="@+id/tv_unit"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_approx_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_below="@+id/rl_unit"
                >

                <TextView
                    android:id="@+id/tv_appox_value"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Approximate Value*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <EditText
                    android:id="@+id/et_approx_value"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:hint="Enter Approximate Value"
                    android:layout_toRightOf="@+id/tv_appox_value"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_requirement_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_below="@+id/rl_approx_value"
                >

                <TextView
                    android:id="@+id/tv_requirement_time"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Requirement Time*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="2dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <Spinner
                    android:id="@+id/sp_requirement_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_7dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/tv_requirement_time"
                    android:background="@drawable/edittext_border"
                    android:entries="@array/reqirement_time"
                    android:padding="@dimen/_5dp" />
                <ImageView
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="23dp"
                    android:tint="@color/black"
                    android:src="@drawable/arrow_down"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_your_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_below="@+id/rl_requirement_time"
                >

                <TextView
                    android:id="@+id/tv_your_location"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Your Location*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <Spinner
                    android:id="@+id/sp_your_location"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:hint="Enter Your Location"
                    android:layout_toRightOf="@+id/tv_your_location"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:entries="@array/reqirement_location"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />
                <ImageView
                    android:layout_width="@dimen/_15dp"
                    android:layout_height="@dimen/_15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="23dp"
                    android:tint="@color/black"
                    android:src="@drawable/arrow_down"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:layout_below="@+id/rl_your_location"
                >

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Your Country*"
                    android:textSize="@dimen/_13sp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />

                <TextView
                    android:id="@+id/tv_country_val"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:hint="Enter Your Country"
                    android:layout_toRightOf="@+id/tv_country"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_buying_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_country"
                android:layout_marginTop="@dimen/_10dp"
                >
                <TextView
                    android:id="@+id/tv_buying_details"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Your Buying Details"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="1dp"
                    android:textSize="@dimen/_13sp"
                    android:textStyle="normal"
                    android:textColor="@color/Gray" />
                <EditText
                    android:id="@+id/et_buying_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100dp"
                    android:hint="Enter Your Buying Details.."
                    android:layout_toRightOf="@+id/tv_buying_details"
                    android:background="@drawable/edittext_border"
                    android:padding="@dimen/_5dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/_7dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColorHint="@color/Gray"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_terms_cond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_buying_details"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_centerHorizontal="true"
                >
                <CheckBox
                    android:id="@+id/check_terms_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/lightgrey"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_terms_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/check_terms_condition"
                    android:text="@string/i_agree"
                    android:lines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/_10sp"
                    android:textStyle="normal"
                    android:textColor="@color/black" />

            </RelativeLayout>
            <Button
                android:id="@+id/btn_sendreq"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_terms_cond"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30dp"
                android:background="@color/black"
                android:text="submit"
                android:layout_marginBottom="@dimen/_10dp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>