<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rl_supplier"
    android:layout_margin="@dimen/_2dp"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mywhite">
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#001333"
            android:textSize="@dimen/_18sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_5dp"
            android:text="Direct Orange Dyes"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_below="@id/tv_company_name"
            android:text="@string/address1"/>
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/_20dp"
            android:textSize="11dp"
            android:lineSpacingExtra="3dp"
            android:layout_toRightOf="@id/address"
            android:paddingLeft="@dimen/_10dp"
            android:layout_below="@id/tv_company_name"
            android:text="B 409 Ambrosia Business Hub, VIP Road,Vesu, Surat, Gujarat 394518"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_marginTop="@dimen/_25dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_below="@id/address"
            android:text="@string/email1"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_below="@+id/tv_company_name"
            android:layout_toRightOf="@id/email"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="5dp"
            android:text="info@daddyscode.com"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="11dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_below="@id/email"
            android:text="@string/website"/>
        <TextView
            android:id="@+id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/website"
            android:layout_below="@id/tv_email"
            android:layout_marginLeft="5dp"
            android:text="https://www.daddyscode.com"/>
        <TextView
            android:id="@+id/contact_per"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/_15dp"
            android:layout_below="@id/tv_website"
            android:layout_marginLeft="@dimen/_5dp"
            android:text="@string/contact_per"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_per"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="@dimen/_10dp"
            android:text="Mukesh Jha"
            android:textColor="@color/black"
            android:textSize="@dimen/_10dp" />
        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="@dimen/_10dp"
            android:text="Marketing Department"
            android:textColor="@color/black"
            android:textSize="@dimen/_10dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:layout_below="@id/contact_per"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/btn_callnow"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="@string/callnow"
                android:textSize="@dimen/_11sp"
                android:background="@drawable/black_button"
                android:layout_height="32dp">

            </Button>
            <Button
                android:id="@+id/btn_sendmessage"
                android:layout_width="@dimen/_120dp"
                android:textSize="@dimen/_11sp"
                android:text="@string/send_message"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_toRightOf="@id/btn_callnow"
                android:textColor="@color/white"
                android:background="@drawable/shop_button"
                android:layout_height="32dp">

            </Button>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>