<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/_10dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="212dp"
        android:background="@drawable/edittext_corner"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headphone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Tempered Envelope"
                android:textColor="#FF9900"
                android:layout_marginBottom="@dimen/_3dp"
                android:layout_alignParentLeft="true"
                android:paddingLeft="@dimen/_15dp"
                android:paddingTop="4dp"
                android:textSize="@dimen/_15dp"
                android:textStyle="bold"
                android:layout_above="@id/btn_get_quotes"
                android:id="@+id/tv_subcategori_tname"
                android:background="@color/transparent"/>
            <Button
                android:id="@+id/btn_get_quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible"
                android:padding="@dimen/_8dp"
                android:layout_below="@+id/product_img"
                android:background="@drawable/shop_button"
                android:text="get quotes"

                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>