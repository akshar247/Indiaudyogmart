<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/_5dp"
    android:layout_marginTop="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_main"
        android:background="@color/mywhite">
        <ImageView
            android:id="@+id/product_img"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/my_product_image"/>
        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_img"
            android:layout_marginTop="6dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/tv_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seller name"
                android:layout_alignParentLeft="true"
                android:textSize="10dp"
                android:visibility="gone"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="@dimen/_200dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="Product Name"
                android:layout_below="@id/tv_seller_name"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000 INR / 0000 Piece"
                android:layout_marginTop="3dp"
                android:paddingLeft="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/product_name"
                android:textSize="10dp"
                android:textColor="@color/red"/>
            <TableRow
                android:id="@+id/hr1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_price"
                android:layout_marginBottom="5dp"
                />
            <Switch
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@id/product_name"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>
            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_marginTop="12dp">
                <Button
                    android:id="@+id/btn_delivered"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:text="@string/send"
                    android:textSize="9dp"
                    android:background="@drawable/green_bg_button"
                    android:textColor="@color/white"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hr1"
                android:lines="3"
                android:id="@+id/message"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:text="@string/issuesdes"
                android:textSize="7dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>