<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mywhite" >

        <ImageView
            android:id="@+id/iv_pro"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_80dp"
            android:src="@drawable/my_product_image"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_8dp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpesh Dudhat"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_toRightOf="@+id/iv_pro"
            android:layout_marginTop="23dp"/>
        <Button
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_20dp"
            android:text="@string/btn_you"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sp"
            android:background="@drawable/shop_button"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datelead"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_pro"
            android:layout_marginLeft="@dimen/_20dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 June 20"
            android:layout_marginLeft="@dimen/_2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@+id/tv_date"
            />

        <TextView
            android:id="@+id/tv_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deslead"
            android:textColor="@color/Gray"
            android:textSize="@dimen/_10sp"
            android:layout_below="@+id/tv_date"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_toRightOf="@id/iv_pro"
            android:layout_marginLeft="@dimen/_20dp"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_pro"
            android:layout_marginTop="@dimen/_3dp"
            android:background="#FFD575">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:stretchColumns="*"
                >
                <TableRow
                    android:id="@+id/firstRow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_5dp"
                    >

                    <TextView
                        android:id="@+id/tv_qut_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qut_qty"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        />

                    <TextView
                        android:id="@+id/tv_bid_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bid_price"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        />

                    <TextView
                        android:id="@+id/tv_samples"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/samples"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="@dimen/_12sp"
                        />

                    <TextView
                        android:id="@+id/tv_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shippinglead"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sp"
                        />

                </TableRow>
                <TableRow
                    android:id="@+id/secondrow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_2dp"
                    android:paddingBottom="@dimen/_5dp">

                    <TextView
                        android:id="@+id/qut_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50000 Units"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp"
                        />

                    <TextView
                        android:id="@+id/bid_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="745 INR"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp"

                        />

                    <TextView
                        android:id="@+id/samples"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upto 3"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp"

                        />

                    <TextView
                        android:id="@+id/shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 Days"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sp"

                        />

                </TableRow>
            </TableLayout>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_orange"
        android:gravity="center_horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="5dp"
        android:layout_marginTop="5dip"
        android:background="@color/transparent">
        <Button
            android:id="@+id/btn_accept"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Accept"
            android:textColor="@color/white"
            android:background="@drawable/shop_button"/>
        <Button
            android:id="@+id/btn_reject"
            android:layout_toRightOf="@id/btn_accept"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Reject"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:background="@drawable/green_button"/>
    </RelativeLayout>




