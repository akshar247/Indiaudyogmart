<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/ns_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/text_view_show_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:atg_borderColor="@color/black"
                app:atg_textColor="@color/black"

                android:visibility="gone"
                android:layout_margin="10dip"
                />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:padding="@dimen/_5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_tag1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_tag2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5dp"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            <com.indiaudyogmart.utils.AutoScrollViewPager
                android:id="@+id/home_top_ViewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_gravity="center"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/home_top_ViewPager"
    android:layout_marginTop="@dimen/_5dp"
    android:id="@+id/rl_product">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trandingitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="vertical"
        />
            <TextView
                android:id="@+id/tv_view_all"
                android:text="View All"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20dp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</RelativeLayout>
            <FrameLayout
                android:id="@+id/fl_productdeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">
                <TextView
                    android:id="@+id/tv_product_interest_title"
                    android:text="@string/home_title1"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/viewmore_product_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/viewall"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:textColor="@color/Orange"
                    android:textSize="@dimen/_10dp"
                    />
                <TableRow
                    android:id="@+id/tr1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Gray"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="bottom"
                    android:layout_below="@id/tv_product_interest_title"
                    />


            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_interest"
                android:layout_width="match_parent"
                android:layout_below="@id/tr1"
                android:layout_margin="10dip"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <FrameLayout
                android:id="@+id/fl_suggestforyou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">
                <TextView
                    android:id="@+id/tv_suggestforyou_title"
                    android:text="@string/suggestforyou"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/viewmore_suggestforyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/viewall"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:textColor="@color/Orange"
                    android:textSize="@dimen/_10dp"
                    />
                <TableRow
                    android:id="@+id/tv_suggestforyou"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Gray"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="bottom"
                    android:layout_below="@id/tv_product_interest_title"
                    />


            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_related"
                android:layout_width="match_parent"
                android:layout_below="@id/tr2"
                android:layout_margin="10dip"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
            <FrameLayout
                android:id="@+id/fl_premium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/_5dp">
                <TextView
                    android:id="@+id/tv_product_premium_title"
                    android:text="@string/home_title2"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/viewmore_product_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_5dp"
                    android:text="@string/viewall"
                    android:visibility="gone"
                    android:layout_gravity="right"
                    android:textColor="@color/Orange"
                    android:textSize="@dimen/_10dp"
                    />
                <TableRow
                    android:id="@+id/tr2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Gray"
                    android:layout_marginTop="18dp"
                    android:layout_gravity="bottom"
                    android:layout_below="@id/tv_product_interest_title"
                    />


            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_product_premium"
                android:layout_width="match_parent"
                android:layout_below="@id/tr2"
                android:layout_margin="10dip"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
